<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lphr.mapper.UserMapper" >
	
	<select id="findByUsername" resultType="com.lphr.entity.User" parameterType="java.lang.String">
		SELECT 
			*
		FROM 
			t_user
		WHERE
			username = #{username} OR phone = #{username}
	</select>
  
</mapper>